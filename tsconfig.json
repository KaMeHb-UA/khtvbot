{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"lib": ["esnext"],
		"types": ["@cloudflare/workers-types"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {},
	},
	"include": ["src"],
}
